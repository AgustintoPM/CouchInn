<%= form_for(@hospedaje) do |f| %>
	<%=	render 'error_messages' %>
    <%= f.label	:Titulo %>
    <%= f.text_field :titulo %>
	<%= f.label :Descripcion %>
	<%= f.text_area :descripcion %>
    <%= f.label :foto%>
    <%= f.text_field :foto %>
    <%= f.label :lugar %>
    <%= f.text_field :lugar %>
	<%= f.label :capacidad %>
    <%= f.text_field :capacidad %>
    <%= f.label :tipo_id, "Tipo" %><br>
    <%= f.select :tipo_id, Tipo.where(:disponible => true).all.collect { |p| [ p.nombre, p.id ]}%>
	<%= f.submit "Guardar", class: "btn btn-primary" %>
<% end %>
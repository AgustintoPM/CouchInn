<%= form_tag "/search/hospedajes", method: "get" do %>
<%= label_tag :search_titulo, 'Titulo' %>
<%= search_field_tag :search_titulo %>
<%= label_tag :search_lugar, 'Lugar' %>
<%= search_field_tag :search_lugar %>
<%= label_tag :search_tipo, 'Tipo' %> 

<% t=Tipo.where(:disponible => true).all.collect %>

<%= select_tag :search_tipo, options_from_collection_for_select(t, "id", "nombre"), include_blank: true%>
<%= label_tag :search_fecha, 'Fecha de Publicacion' %>
<%= date_select(:search_fecha, "fecha", include_blank: true, end_year: Date.today.year) %>
<%= submit_tag 'Buscar' %>
<% end %>
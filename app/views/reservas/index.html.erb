<table class="table">
<h1> Listado de Mis Reservas </h1>

	<tr>
		<th> Estado </th>
		
		<th> Hospedaje  </th>
		<th> Detalles </th>

		<th> Eliminar </th>
	</tr>

	
	<% @reservas.each do |r| %>
		<tr>
		 <% if r.user_id == current_user.id %>
		 	<% if r.aceptado %>
				<td> Aceptado </td>
			<% else %>
				<td> Rechazado </td>
			<% end %>
			
			<td> <%= r.hospedaje.titulo %> </td>
			<td>
				<%= link_to "Ver", r %>
			</td>
			<td><%= link_to "Eliminar", r,method: :delete %>
			</td>
			<% end %>
		</tr>
	<% end %>
 </table>
<p>Usuario : <%= link_to @reserva.user.name , controller: "users", action: "show", id: @reserva.user.id %></p>

<p>Hospedaje : <%= @reserva.hospedaje.titulo %></p>
<p>Capacidad : <%= @reserva.hospedaje.capacidad %></p>
<%= image_tag @reserva.hospedaje.foto %>
<p>Desde : <%= @reserva.desde.to_date %></p>
<p>Hasta : <%= @reserva.hasta.to_date %></p>

<% if @reserva.aceptado %>
	<p> Reserva Aceptada </p>
<% else %>
	<p> Reserva Rechazada </p>
<% end %>

<% if @reserva.desde > @reserva.hasta %>
	<p> desde mayor </p>
<% else %>
	<p> desde menor </p>
<% end %>

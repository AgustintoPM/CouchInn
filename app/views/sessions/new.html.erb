<% provide(:title, "Ingresar al sistema") %>
<h1>Ingrese sus datos</h1>
<div class="row">
 <div class="col-md-6 col-md-offset-3">
    <%#<%= form_for(:session, url: login_path) do |f| %>
    <%= form_for(:session, url: login_path, method: :post) do |f| %>
    
	<%= f.label :correo%>
	<%= f.email_field :email, class: 'form-control'	%>
	
	<%= f.label :clave %>
	<%= link_to "(Me olvide la contraseña!)", new_password_reset_path %>
	<%= f.password_field :password,	class: 'form-control' %>
	
	<%=	f.label	:remember_me,	class:	"checkbox	inline"	do	%>
								<%=	f.check_box	:remember_me	%>
								<span>Recordarme en esta maquina</span>
						<%	end	%>
	
	<%= f.submit "Ingresar", class: "btn btn-primary"	%>
    <% end %>
 <p>¿No esta registrado? <%= link_to "Registrarme!", signup_path	%></p>
 </div>
</div>

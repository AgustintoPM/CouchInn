<% provide(:title, "Editar perfil")	%>
<h1>Actualice su perfil</h1>
<div class="row">
		<div class="col-md-6 col-md-offset-3">
				<%= form_for(@user) do |f| %>
						<%=	render 'shared/error_messages'	%>
						<%=	f.label :Nombre %>
						<%=	f.text_field :name, class: 'form-control' %>
						<%=	f.label :correo %>
						<%=	f.email_field :email, class: 'form-control' %>
						<%=	f.label :clave %>
						<%=	f.password_field :password, class: 'form-control' %>
						<%=	f.label :password_confirmation, "Confirmacion" %>
						<%=	f.password_field :password_confirmation, class: 'form-control' %>
						<%if current_user.premium? %>
							<%=	f.label :Tarjeta_de_credito %>
							<%=	f.text_field :credit_card, class: 'form-control' %>
						<% end %>
						<%=	f.submit "Guardar cambios", class: "btn btn-primary" %>
				<% end %>
		</div>
</div>